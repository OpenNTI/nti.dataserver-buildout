<!-- -*- mode: nxml -*- -->
<configure	xmlns="http://namespaces.zope.org/zope"
			xmlns:i18n="http://namespaces.zope.org/i18n"
			xmlns:zcml="http://namespaces.zope.org/zcml"
			xmlns:titleiv="http://nextthought.com/ntp/titleiv">

	<!-- DB Registration Directives -->
	<include package="nti.oubound.financialplan.title_iv" file="meta.zcml" />

	<include package="z3c.baseregistry" file="meta.zcml" />

	<registerIn registry="nti.app.oubound.financialplan.sites.FSP">
			<titleiv:registerTitleIVDB
				username="${titleiv-db-conf:user}"
				password="${titleiv-db-conf:password}"
				dsn="${titleiv-db-conf:dsn}"/>
	</registerIn>

</configure>
