<!-- -*- mode: nxml -*- -->
<configure	xmlns="http://namespaces.zope.org/zope"
			xmlns:i18n="http://namespaces.zope.org/i18n"
			xmlns:zcml="http://namespaces.zope.org/zcml"
			xmlns:scholarship="http://nextthought.com/scholarship/database">

	<include package="nti.oubound.scholarship.database" file="meta.zcml" />
	<scholarship:registerScholarshipDB
				dburi="${scholarship:driver}://${scholarship:user}:${scholarship:password}@${scholarship:host}/${scholarship:dbname}?charset=utf8"
				twophase="${scholarship:twophase}"
				autocommit="${scholarship:autocommit}" />

</configure>
