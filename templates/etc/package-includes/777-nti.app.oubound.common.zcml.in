<!-- -*- mode: nxml -*- -->
<configure	xmlns="http://namespaces.zope.org/zope"
			xmlns:i18n="http://namespaces.zope.org/i18n"
			xmlns:zcml="http://namespaces.zope.org/zcml"
			xmlns:salesforce="http://nextthought.com/ntp/salesforce">

	<include package="nti.oubound.common.salesforce" file="meta.zcml" />

	<include package="z3c.baseregistry" file="meta.zcml" />

	<registerIn registry="nti.app.oubound.common.sites.OUBOUND_BASE">
		<salesforce:registerSalesforceAPI
				 username="${salesforce-conf:username}"
				 password="${salesforce-conf:password}"
				 security_token="${salesforce-conf:security_token}"
				 sandbox="${salesforce-conf:sandbox}" />
	</registerIn>
</configure>
