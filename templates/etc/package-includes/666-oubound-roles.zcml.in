<configure	xmlns="http://namespaces.zope.org/zope"
			xmlns:sp="http://nextthought.com/ntp/securitypolicy">

	<include file="meta.zcml" package="zope.security"/>
	<include file="meta.zcml" package="zope.securitypolicy"/>
	<include file="meta.zcml" package="nti.securitypolicy"/>

	<!-- Define a role, the easier to group permissions -->
	<role 	id="role:nti.oubound.scholarship.admin" 
			title="A role for scholarship administrators"
			description="Currently provides access to reporting and other analytics data"/>

	<permission id="nti.oubound.scholarship.actions.view_reports" title="View Scholarship Reports"/>

	<grant	permission="nti.oubound.scholarship.actions.view_reports"
			role="role:nti.oubound.scholarship.admin"/>

	<!-- Housing -->
	<role 	id="role:nti.oubound.housing.admin" 
			title="A role for housing administrators"
			description="Currently provides access to reporting and other analytics data"/>

	<permission id="nti.oubound.housing.actions.view_reports" title="View Housing Reports"/>
	<permission id="nti.oubound.housing.actions.manage_contracts" title="Manage Housing Contracts"/>

	<grant	permission="nti.oubound.housing.actions.view_reports"
			role="role:nti.oubound.housing.admin"/>

	<grant	permission="nti.oubound.housing.actions.manage_contracts"
			role="role:nti.oubound.housing.admin"/>

	<role     id="role:nti.oubound.housing.support" 
			title="A role for housing support personel"
			description="Currently provides readonly access to reporting and other analytics data"/>

</configure>
