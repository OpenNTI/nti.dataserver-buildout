${deployment:log-directory}/nginx-std*---supervisor-*.log {
    daily
    rotate 7
    dateext
    nocompress
    notifempty
    missingok
    sharedscripts
    postrotate
        kill -USR2 `cat ${deployment:run-directory}/supervisord.pid`
    endscript
}

${deployment:log-directory}/nginx/*.log {
    daily
    rotate 7
    dateext
    nocompress
    notifempty
    missingok
    sharedscripts
    postrotate
        kill -USR1 `cat ${deployment:run-directory}/nginx.pid`
    endscript
}
