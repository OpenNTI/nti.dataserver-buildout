<!-- -*- mode: nxml -*- -->
<configure xmlns="http://namespaces.zope.org/zope"
		   xmlns:zcml="http://namespaces.zope.org/zcml"
		   xmlns:pyramid="http://pylonshq.com/pyramid">
	<include package="pyramid_zcml" />

	<pyramid:route name='webapp.i18n.strings_js'
				   pattern='${environment:webapp_location}resources/strings/strings.js' >
		A route used for exactly one view, one that handles
		localization of the webapp's strings file.
	</pyramid:route>

	<pyramid:static name="${environment:webapp_location}resources/locales"
					path="nti.app.i18n:locales" />

	<!--
	By the time this package is included, we expect the
	route 'webapp.i18n.strings_js' to have been defined
	-->
	<pyramid:scan package='nti.app.i18n.views' />

</configure>
